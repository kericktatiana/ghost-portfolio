.work-feed__wrapper
	display flex
	flex-direction row
	margin 0 10px 40px 10px
	
.work-feed__link
	color $green100
	display flex
	font 14px $regular
	justify-content flex-end
	padding 0 20px
	text-transform uppercase
	
	-webkit-transition color 0.75s ease 0s
	-moz-transition color 0.75s ease 0s
	-o-transition color 0.75s ease 0s
	transition color 0.75s ease 0
	&:hover 
		color $green200
		cursor pointer
	
.post-card__wrapper
	display flex
	flex-direction column
	margin-left 10px
	margin-right 10px
	width 33.333333%
	
.post-card__image-wrapper
	margin-bottom 10px
	overflow hidden
	position relative
.post-card__image
	background-size cover
	height 250px
	width 100%
	
.post-card__title
	font 14px $bold
	color $green100
	text-align center
	text-transform uppercase

	-webkit-transition color 0.75s ease 0s
	-moz-transition color 0.75s ease 0s
	-o-transition color 0.75s ease 0s
	transition color 0.75s ease 0
	
.post-card__link-wrapper&:hover
	cursor pointer
	.post-card__title
		color $green200
	
