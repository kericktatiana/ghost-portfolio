.header--outer
	background-size 100%
	display flex
	min-height 300px
	width 100%
	flex-direction column
	padding-top 10px

.header--inner
	align-items center
	display flex
	flex-direction column
	justify-content center
	
.header__intro
	color $white
	font 50px $thin
	line-height 60px
	margin-bottom 10px
	
.header__text
	color $purple10
	font 30px $regular
	line-height 40px
	text-transform uppercase
	
.site-nav
	width 100%
	align-items center
	padding 0 20px
	margin-bottom 30px
	ul
		display flex
		flex-direction row
		justify-content flex-end
	li
		margin-left 20px
		margin-right 20px
		&:last-child
			margin-right 0
	a
		color $green10
		font 14px $regular
		letter-spacing 0.032em
		text-transform uppercase
		
		-webkit-transition color 0.75s ease 0s
		-moz-transition color 0.75s ease 0s
		-o-transition color 0.75s ease 0s
		transition color 0.75s ease 0
		&:hover
			color $green200
			