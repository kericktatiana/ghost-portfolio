button
	border none
	background-color transparent
	&:focus
		outline none

.button__row
	display flex
	flex-direction row

.button--first
	margin-right 20px
	
.button--outline
	border 2px solid $green10
	font 12px $regular
	color $green200
	height 30px
	letter-spacing 0.032em
	padding 6px 13px
	text-align center
	text-transform uppercase
	width 120px
	
	-webkit-transition background-color 0.75s ease 0s
	-moz-transition background-color 0.75s ease 0s
	-o-transition background-color 0.75s ease 0s
	transition background-color 0.75s ease 0s
	&:hover
		cursor pointer
		background-color $green10
		

	
.button--full
	border none
	background-color $green10
	font 12px $regular
	color $green200
	height 30px
	letter-spacing 0.032em
	padding 6px 13px
	text-align center
	text-transform uppercase
	width 120px
	
	-webkit-transition background-color 0.75s ease 0s
	-moz-transition background-color 0.75s ease 0s
	-o-transition background-color 0.75s ease 0s
	transition background-color 0.75s ease 0s
	&:hover
		cursor pointer
		background-color $green100